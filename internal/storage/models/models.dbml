Table role {
  id integer [primary key]
  name varchar(64)
  description varchar(512)
}

Table user {
  id integer [primary key]
  username varchar(255) [unique]
  email varchar(255)
  password text
  is_verified bool
  role integer
  created_at timestamp
  updated_at timestamp
}

Table post {
  id integer [primary key]
  files text
  description varchar(1024)
  creator integer
  created_at timestamp
  updated_at timestamp
}

Ref user_roles: user.role > role.id
Ref user_posts: user.id < post.creator
